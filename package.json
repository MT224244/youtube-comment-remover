{
    "name": "youtube-comment-remover",
    "version": "2.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "clasp": "clasp",
        "clasp:login": "clasp login",
        "clasp:clone": "clasp clone --rootDir dist",
        "build:gas": "bun -F @ycr/gas build",
        "build:tm": "bun -F @ycr/tm build",
        "build": "run-p -ln \"build:*\"",
        "postbuild": "bun run scripts/build.ts",
        "predeploy": "clasp push -f",
        "deploy": "bun run scripts/deploy.ts",
        "lint": "eslint",
        "lint:inspector": "eslint --inspect-config",
        "typecheck": "tsc -b --noEmit"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "@google/clasp": "^3.0.6-alpha",
        "@stylistic/eslint-plugin": "^5.2.2",
        "@types/bun": "^1.2.19",
        "@typescript-eslint/utils": "^8.39.0",
        "eslint-config-flat-gitignore": "^2.1.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "jiti": "^2.5.1",
        "npm-run-all2": "^8.0.4",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "catalog": {
            "@types/google-apps-script": "^1.0.99",
            "@types/tampermonkey": "^5.0.4",
            "@types/trusted-types": "^2.0.7",
            "jsonpath-plus": "^10.3.0",
            "rollup-plugin-google-apps-script": "^2.0.2",
            "vite": "^7.0.6"
        }
    }
}
