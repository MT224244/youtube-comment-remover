{
    "name": "@ycr/tm",
    "version": "1.0.0",
    "description": "Youtubeのコメント欄にいる変な奴を消し飛ばす",
    "author": "MT224244",
    "type": "module",
    "private": true,
    "tampermonkey": {
        "name": "YouTube Comment Remover",
        "namespace": "https://mt224244.com",
        "match": "https://www.youtube.com/*",
        "run-at": "document-start",
        "connect": [
            "script.google.com",
            "script.googleusercontent.com"
        ],
        "grant": [
            "GM_xmlhttpRequest",
            "GM_getValue",
            "GM_setValue"
        ]
    },
    "scripts": {
        "build": "vite build"
    },
    "devDependencies": {
        "@types/tampermonkey": "catalog:",
        "@types/trusted-types": "catalog:",
        "@ycr/types": "workspace:",
        "vite": "catalog:"
    }
}
