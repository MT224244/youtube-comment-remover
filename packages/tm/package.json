{
    "name": "@ycr/tm",
    "description": "YouTubeのコメント欄にいる変な奴を消し飛ばす",
    "author": "MT224244",
    "type": "module",
    "private": true,
    "tampermonkey": {
        "name": "YouTube Comment Remover",
        "namespace": "https://mt224244.com",
        "match": [
            "https://www.youtube.com/watch?v=*",
            "https://www.youtube.com/live/*"
        ],
        "run-at": "document-start",
        "require": "https://unpkg.com/jsonpath-plus@10.3.0/dist/index-browser-umd.min.cjs",
        "connect": [
            "script.google.com",
            "script.googleusercontent.com"
        ],
        "grant": [
            "GM_xmlhttpRequest",
            "GM_getValue",
            "GM_setValue"
        ]
    },
    "scripts": {
        "build": "vite build"
    },
    "devDependencies": {
        "@types/tampermonkey": "catalog:",
        "@types/trusted-types": "catalog:",
        "@ycr/types": "workspace:",
        "jsonpath-plus": "catalog:",
        "vite": "catalog:"
    }
}
